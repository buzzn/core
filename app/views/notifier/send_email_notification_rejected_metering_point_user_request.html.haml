%p
  = t('hello') + " #{@receiver.name}!"
- if @mode == 'request'
  %p= t('user_rejected_your_metering_point_user_request_for_metering_point', user: @sender.name, metering_point: @metering_point.name)
  %p= t('to_ask_again_for_membership_please_visit_the_metering_point', metering_point: link_to(@metering_point.name, metering_point_url(@metering_point))).html_safe
- else
  %p= t('user_rejected_your_metering_point_user_invitation_for_metering_point', user: @sender.name, metering_point: @metering_point.name)
  %p= t('to_invite_user_again_please_visit_your_metering_point', user: @sender.name, metering_point: link_to(@metering_point.name, metering_point_url(@metering_point))).html_safe
%p= t('your_buzzn_team')