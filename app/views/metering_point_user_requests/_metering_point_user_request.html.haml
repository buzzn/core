- if metering_point_user_request.mode == 'request'
  .bs-callout.bs-callout-info
    .col-md-3
      .thumb_icon.friendship_req
        = link_to image_tag(metering_point_user_request.user.profile.decorate.image.sm, class: "img-circle"), metering_point_user_request.user.profile, :data => { 'toggle' => 'tooltip', container: 'body', 'original-title' => metering_point_user_request.user.profile.name }, rel: 'tooltip'
    .col-md-1
    .col-md-8
      %h4= t'new_metering_point_user_request'
      /%p= link_to metering_point_user_request.metering_point.decorate.name, metering_point_user_request.metering_point

      = link_to t('accept'), accept_metering_point_user_request_path(metering_point_user_request), class: 'btn btn-success btn-labeled fa fa-check'
      = link_to t('reject'), reject_metering_point_user_request_path(metering_point_user_request), class: 'btn btn-danger btn-labeled fa fa-remove'
- else
  .bs-callout.bs-callout-info
    .col-md-3
      .thumb_icon.friendship_req
        = link_to content_tag(:i, '', class: "fa fa-bolt fa-4x"), metering_point_user_request.metering_point, :data => { 'toggle' => 'tooltip', container: 'body', 'original-title' => metering_point_user_request.metering_point.decorate.name }, rel: 'tooltip'
    .col-md-1
    .col-md-8
      %h4= t'new_metering_point_user_invitation'
      %p= t('do_you_want_to_join_the_metering_point', metering_point: link_to(metering_point_user_request.metering_point.decorate.name, metering_point_user_request.metering_point)).html_safe + '?'

      = link_to t('accept'), accept_metering_point_user_request_path(metering_point_user_request), class: 'btn btn-success btn-labeled fa fa-check'
      = link_to t('reject'), reject_metering_point_user_request_path(metering_point_user_request), class: 'btn btn-danger btn-labeled fa fa-remove'