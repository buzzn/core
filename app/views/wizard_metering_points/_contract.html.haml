.modal-content
  #demo-main-wz
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
      %h4.modal-title= t'new_metering_point'
      %ul.row.wz-step.wz-icon-bw.wz-nav-off.mar-top
        %li.col-xs-4{style: "opacity: 0.5"}
          %span.icon-wrap.icon-wrap-xs.bg-danger
            %i.fa.fa-flash
          %p.text-thin= t('metering_point')
        %li.col-xs-4{style: "opacity: 0.5"}
          %span.icon-wrap.icon-wrap-xs.bg-warning
            %i.fa.fa-dashboard
          %p.text-thin= t('meter')
        %li.col-xs-4
          %span.icon-wrap.icon-wrap-xs.bg-info
            %i.fa.fa-file-text
          %p.text-thin= t('data_connection')
    .modal-body
      = simple_form_for @contract, remote: true, url: contract_update_wizard_metering_points_path(metering_point_id: params[:metering_point_id]), method: 'put'  do |f|
        = f.association :organization, input_html: {class: 'select2'}
        .js-dependent-fields{'data-select-id' => 'contract_organization_id', 'data-option-value' => Organization.where(slug: 'discovergy').first.id}
          = f.input :username
          = f.input :password

        .modal-footer
          = f.button :submit, t("finish"), id: 'submit', class: 'btn btn-success'