.modal-content
  #demo-main-wz
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
      %h4.modal-title= t'new_metering_point'
      %ul.row.wz-step.wz-icon-bw.wz-nav-off.mar-top
        %li.col-xs-4
          %span.icon-wrap.icon-wrap-xs.bg-danger
            %i.fa.fa-flash
          %p.text-thin= t('metering_point')
        %li.col-xs-4{style: "opacity: 0.5"}
          %span.icon-wrap.icon-wrap-xs.bg-warning
            %i.fa.fa-dashboard
          %p.text-thin= t('meter')
        %li.col-xs-4{style: "opacity: 0.5"}
          %span.icon-wrap.icon-wrap-xs.bg-info
            %i.fa.fa-file-text
          %p.text-thin= t('data_connection')
    .modal-body
      = simple_form_for @metering_point, remote: true, url: metering_point_update_wizard_metering_points_path, method: 'put'  do |f|
        = f.input :mode, collection: MeteringPoint.modes, include_blank: false, as: :radio_buttons, label: t("metering_point_mode")
        = f.input :name

        .modal-footer
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'
