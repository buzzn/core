.container
  .row
    .col-md-4
    .col-md-4
      %h5= t'progress'
  .row
    .col-md-4
    .col-md-4
      .progress
        .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "0", role: "progressbar", style: "width: 0%;"}
          0%
  .row
    .col-md-4
    .col-md-4
      .forminput.box
        %h1= t'new_metering_point'

        = simple_form_for @metering_point, url: metering_point_update_wizard_metering_points_path(id: params[:id]), method: 'put'  do |f|
          = f.input :address_addition
          = f.input :uid
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'