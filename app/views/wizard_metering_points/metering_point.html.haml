.container
  .row
    .col-md-4
    .col-md-4
      %h5= t'progress'
  .row
    .col-md-4
    .col-md-4
      .progress
        .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "58", role: "progressbar", style: "width: 58%;"}
          58%
  .row
    .col-md-4
    .col-md-4
      .forminput.box
        %h1= t'new_metering_point'

        = simple_form_for @metering_point, url: url_for( action: 'metering_point_update', controller: 'wizard_metering_points'), method: 'put'  do |f|
          = f.input :address_addition
          = f.input :uid
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'