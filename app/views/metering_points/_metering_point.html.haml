.item{id: "metering_point_#{metering_point.id}", class: metering_point.mode }
  .block
    .header.no-border
      %h2= link_to metering_point.name, metering_point
    .chart{id: metering_point.mode}
      .chart_container#chart
    .content.no-padding
      %table.table
        %tbody
          %tr
            %td= t('devices')
            %td.devices.small_icon
              = render metering_point.devices
          %tr
            %td= t('users')
            %td.users
              - metering_point.users.each do |user|
                = render user.profile
