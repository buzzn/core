.item{id: "metering_point_#{metering_point.id}", class: metering_point.mode }

  .row
    .col-md-8
      %h5= link_to metering_point.name, metering_point

  .row
    .col-md-3
      %i.fa.fa-refresh.fa-spin.fa-4x
    .col-md-9
      - if metering_point.register
        //.inlinebar.bar= metering_point.register.day_to_hours
        .chart.blue_container
          #fake_location_display{style: "height: 200px"}

  .row
    .col-md-6
      .devices
        = render metering_point.devices
    .col-md-6
      .users
        - metering_point.users.each do |user|
          = render user.profile
