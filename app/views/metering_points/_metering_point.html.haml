.col-sm-12.col-md-12.col-lg-6.metering_point{id: "metering_point_#{metering_point.id}" }
  .panel.widget

    .widget-header{class: "bg-#{metering_point.mode_class}" }
      = image_tag metering_point.smart_image.cover, class: 'widget-bg img-responsive' if metering_point.smart_image
      .chart{id: "chart-container-#{metering_point.id}", style: "width: 100%; height: 180px;"}

    .widget-body.text-center

      %span.icon-wrap.icon-wrap-sm.icon-circle.widget-img.img-border-light{ class: "bg-#{metering_point.mode_class}"}
        %i.fa.fa-bolt.fa-3x


      %p.text-2x.mar-no= link_to metering_point.long_name, metering_point
      %ul.list-unstyled.text-center.pad-top.mar-no.clearfix
        - metering_point.registers.each do |register|
          %li.register{ id: register.id, class: "col-xs-#{12/metering_point.registers.count}"}

            = content_tag :div, id: "register-ticker-#{register.id}", class: "register-ticker", data: { readings: register.smart? ? register.last_two_readings : nil, slp: !register.smart? } do
              %span.text-4x
                .power-ticker

            %p.text-muted
              %i.fa{class: "fa-arrow-#{ register.mode == 'in' ? 'down' : 'up'}"}
              Watt
              = t "#{register.mode}_root_metering_point"


      %hr


      %ul.list-unstyled.text-center.clearfix

        %li.col-xs-3
          %p.text-uppercase
            %i.fa.fa-sitemap
          %p.text-sm= "#{metering_point.children.count} #{t('sub_metering_points')}"

        %li.col-xs-3
          %p.text-uppercase
            %i.fa.fa-user
          %p.text-sm= "#{metering_point.users.count} #{t('residents')}"

        %li.col-xs-3
          %p.text-uppercase
            %i.fa.fa-plug
          %p.text-sm= "#{metering_point.devices.count} #{t('devices')}"


        %li.col-xs-3
          %p.text-uppercase
            %i.fa.fa-users
          %p.text-sm= t'buzzn'
