.metering_point.col-lg-4{id: "metering_point_#{metering_point.id}" }
  .panel.widget
    .highchart{id: "highchart-container", style: "width: 100%; height: 200px;"}
    .widget-header.bg-purple
      - if metering_point.image?
        = link_to image_tag( metering_point.image.cover, class: 'widget-bg img-responsive'), metering_point
      - elsif metering_point.devices.any?
        - if metering_point.devices.first.image?
          = link_to image_tag( metering_point.devices.first.image.cover, class: 'widget-bg img-responsive'), metering_point

    .widget-body.text-center
      %h4.mar-no= link_to metering_point.long_name, metering_point
      %ul.list-unstyled.text-center.pad-top.mar-no.clearfix
        - metering_point.registers.each do |register|
          %li.register.col-xs-6{ id: register.id}
            %span.text-2x.text-thin= register.last_watt
            %p Watt
            %p.text-muted.text-uppercase
              - if register.mode == 'in'
                %i.fa.fa-arrow-down
              - elsif register.mode == 'out'
                %i.fa.fa-arrow-up
              - else


