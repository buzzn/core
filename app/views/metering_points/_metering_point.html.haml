.item{id: "metering_point_#{metering_point.id}", class: metering_point.mode }

  .row
    .col-md-8
      - if current_user.can_update?(metering_point)
        %h5= metering_point.link_to_edit
      - else
        %h5= metering_point.name

      - if current_user.can_update?(metering_point)
        - if metering_point.meter
          = metering_point.meter.edit
        - else
          = metering_point.new_meter if current_user.can_update?(metering_point)

  .row
    .col-md-6
      .users
        - metering_point.users.each do |user|
          = render user.profile
        .thumb
          = metering_point.edit_users if current_user.can_update?(metering_point)
    .col-md-6
      .devices
        - metering_point.devices.each do |device|
          = render device
        .thumb
          = metering_point.new_device if current_user.can_update?(metering_point)