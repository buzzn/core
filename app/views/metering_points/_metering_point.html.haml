.row.offer
  .col-md-4= link_to metering_point.address.name, metering_point
  .col-md-2
    - if current_user.can_update?(metering_point)
      = link_to t('edit'), edit_metering_point_path(metering_point)

    - if current_user.can_delete?(metering_point)
      = link_to t('destroy'), metering_point, :method => :delete, :data => { :confirm => 'Are you sure?' }
