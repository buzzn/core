.col-sm-3
  .detail_icon
    //%i.fa.fa-bar-chart-o
    %i.fa.fa-map-marker
  %h4= @metering_point.name
  - if current_user.can_update?(@metering_point)
    = @metering_point.link_to_edit


  %h5.page-header= t('belongs_to_location')
  %article.sidebar_module.residents
    %ul
      = render @metering_point.location
    .clearfix

  - if @group
    %h5.page-header= t('belongs_to_group')
    %article.sidebar_module.residents
      %ul
        = render @group
      .clearfix

  %h5.page-header= t('users')
  %article.sidebar_module.residents
    %ul
      - @users.each do |user|
        = render user.profile
      - if current_user.can_update?(@metering_point)
        = @metering_point.edit_users
    .clearfix


  %h5.page-header= t('devices')
  %article.sidebar_module.devices
    %ul
      - @devices.each do |device|
        = render device
      - if current_user.can_update?(@metering_point)
        = @metering_point.new_device
    .clearfix


.col-sm-6
  %ul.nav.nav-pills#mytab.nav-spacer
    %li.active
      %a{"data-toggle" => "tab", href: "#charts"}
        = t'charts'
    %li
      %a{"data-toggle" => "tab", href: "#meter"}
        = t'meter'
    %li
      %a{"data-toggle" => "tab", href: "#contracts"}
        = t'contracts'

  .tab-content
    #charts.tab-pane.active

      .block
        .header.no-border
          %h2= t('actual_readings')
        .chart{id: @metering_point.mode}
          .chart_container#actual_readings

      .block
        .header.no-border
          %h2= t('day_to_hours')
        .chart{id: @metering_point.mode}
          .chart_container#day_to_hours


      .block
        .header.no-border
          %h2= t('month_to_days')
        .chart{id: @metering_point.mode}
          .chart_container#month_to_days


      .block
        .header.no-border
          %h2= t('year_to_months')
        .chart{id: @metering_point.mode}
          .chart_container#year_to_months


    #contracts.tab-pane
      - if @metering_point.contract
        = render @metering_point.contract
      - else
        .alert.alert-danger= t'no_contract_for_metering_point'


    #meter.tab-pane


      - if @metering_point.registers
        = render @metering_point.registers
      - else
        = @metering_point.new_register








