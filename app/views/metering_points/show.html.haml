.col-sm-3
  .detail_icon
    %i.fa.fa-bolt
  %h4= @metering_point.name
  = @metering_point.link_to_edit


  %h5.page-header= t('belongs_to_location')
  %article.sidebar_module.residents
    %ul
      = render @metering_point.location
    .clearfix


  %h5.page-header= t('users')
  %article.sidebar_module.residents
    %ul
      - @users.each do |user|
        = render user.profile
      - if current_user.can_update?(@metering_point)
        = @metering_point.edit_users
    .clearfix


  %h5.page-header= t('devices')
  %article.sidebar_module.devices
    %ul
      - @devices.each do |device|
        = render device
      - if current_user.can_update?(@metering_point)
        = @metering_point.new_device
    .clearfix


.col-sm-6


  .raw
    #day_to_hours{style: "height:200px"}

  .raw
    #fake_day_to_hours{style: "height:200px"}


  .raw
    %ul.nav.nav-tabs#mytab

      %li.active
        %a{"data-toggle" => "tab", href: "#register"}
          = t'register'

      %li
        %a{"data-toggle" => "tab", href: "#contracts"}
          = t'contracts'

    .tab-content

      #contracts.tab-pane.active
        - if @metering_point.contract
          = render @metering_point.contract
        - else
          .alert.alert-danger= t'no_contract_for_metering_point'

      #register.tab-pane
        - if @metering_point.register
          = render @metering_point.register
        - else
          = @metering_point.new_register



