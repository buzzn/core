.col-sm-3
  .detail_icon
    %i.fa.fa-bar-chart-o
    //%i.fa.fa-tachometer
  %h4= @metering_point.name
  = @metering_point.link_to_edit


  %h5.page-header= t('belongs_to_location')
  %article.sidebar_module.residents
    %ul
      = render @metering_point.location
    .clearfix

  - if @group
    %h5.page-header= t('belongs_to_group')
    %article.sidebar_module.residents
      %ul
        = render @group
      .clearfix

  %h5.page-header= t('users')
  %article.sidebar_module.residents
    %ul
      - @users.each do |user|
        = render user.profile
      - if current_user.can_update?(@metering_point)
        = @metering_point.edit_users
    .clearfix


  %h5.page-header= t('devices')
  %article.sidebar_module.devices
    %ul
      - @devices.each do |device|
        = render device
      - if current_user.can_update?(@metering_point)
        = @metering_point.new_device
    .clearfix


.col-sm-6
  %ul.nav.nav-pills#mytab
    %li.active
      %a{"data-toggle" => "tab", href: "#charts"}
        = t'charts'
    %li
      %a{"data-toggle" => "tab", href: "#register"}
        = t'register'
    %li
      %a{"data-toggle" => "tab", href: "#contracts"}
        = t'contracts'

  .tab-content
    #charts.tab-pane.active
      .raw
        .block
          .header.no-border
            %h2= t('actual_readings')
          .chart{id: @metering_point.mode}
            .chart_container#fake_real_time_data

      .raw
        .block
          .header.no-border
            %h2= t('actual_smart_meter_readings')
          .chart{id: @metering_point.mode}
            .chart_container#day_to_hours

      .raw
        .block
          .header.no-border
            %h2= t('day_by_hour_readings')
          .chart{id: @metering_point.mode}
            .chart_container#fake_day_to_hours

      .raw
        .block
          .header.no-border
            %h2= t('week_by_day_readings')
          .chart{id: @metering_point.mode}
            .chart_container#fake_week_to_days

      .raw
        .block
          .header.no-border
            %h2= t('month_by_day_readings')
          .chart{id: @metering_point.mode}
            .chart_container#fake_month_to_days

      .raw
        .block
          .header.no-border
            %h2= t('year_by_month_readings')
          .chart{id: @metering_point.mode}
            .chart_container#fake_year_to_months

      .raw
        .block
          .header.no-border
            %h2= t('years_by_year_readings')
          .chart{id: @metering_point.mode}
            .chart_container#fake_years_to_year


    #contracts.tab-pane
      - if @metering_point.contract
        = render @metering_point.contract
      - else
        .alert.alert-danger= t'no_contract_for_metering_point'

    #register.tab-pane
      - if @metering_point.register
        = render @metering_point.register
      - else
        = @metering_point.new_register








