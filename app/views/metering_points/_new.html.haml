      %h4.modal-title= t'new_metering_point'
    .modal-body
      = simple_form_for @metering_point, remote: true do |f|
        = f.input :location_id, input_html: { value: params[:location_id] }, as: :hidden
        = f.input :mode, include_blank: false, collection: [:up_metering, :down_metering], input_html: { class: 'select2' }
