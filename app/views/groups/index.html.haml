#page-title
  %h1.page-header.text-overflow= t'groups'


#page-content
  .row
    - @groups.each do |group|
      .col-md-6.col-lg-3
        .panel.widget
          .widget-header.bg-primary
          .widget-body.text-center
            %img.widget-img.img-circle.img-border-light{:alt => "Profile Picture", :src => group.assets.first}
              %h4.mar-no= link_to group.name, group
              %p.text-muted.mar-btm Administrator
              .pad-ver
                %button.btn.btn-primary Follow
                %button.btn.btn-success Message
