.col-xs-12.col-sm-6.col-md-6.col-lg-3.group{id: "group_#{group.id}" }
  = link_to group do
    .panel.widget
      .widget-header.bg-purple
        %img.widget-bg.img-responsive{:alt => "Image", :src => group.image.cover}
      .widget-body.text-center
        %img.widget-img.img-border-light{:alt => "Profile Picture", :src => group.logo.lg}
        %h4.mar-no= group.name
        -# %p.text-muted.mar-btm Organization
        %ul.list-unstyled.text-center.pad-top.mar-no.clearfix

          %li.col-xs-4
            %span.text-lg= group.members.count
            %p.text-muted.text-uppercase
              %small= t'members'

          %li.col-xs-4
            %span.text-lg= group.metering_points.outputs.count
            %p.text-muted.text-uppercase
              %small= t'generators'

          %li.col-xs-4
            %span.text-lg= group.get_scores('day_to_minutes', Time.now.to_i)[:autarchy]
            %p.text-muted.text-uppercase
              %small= t'autarchy'
