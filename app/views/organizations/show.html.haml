- meta title: "#{@organization.name}"

.col-md-3
  .detail_icon
    %i.fa.fa-flash

  %h4= @organization.name
  - if current_user.has_role?(:admin)
    = @organization.decorate.link_to_edit

  - if @organization.contracting_party
    %h5.page-header= t('contracting_party')
    %article.sidebar_module.residents
      %ul
        = render @organization.contracting_party
      .clearfix
  %h5.page-header= t('address')
  %address
    = "#{@organization.address.street_name} #{@organization.address.street_number}"
    %br
    = "#{@organization.address.zip} #{@organization.address.city}"
    %br
    = @organization.address.state

.col-md-6
  %ul.nav.nav-pills#mytab.nav-spacer
    %li.active
      %a{"data-toggle" => "tab", href: "#organization_properties"}
        = t'organization_properties'
    %li
      %a{"data-toggle" => "tab", href: "#assets"}
        = t'assets'

  .tab-content
    #organization_properties.tab-pane.active
      .block
        .header.no-border
          %h2= t('organization_properties')
        .content.no-padding
          %table.table
            %tbody
              %tr
                %td= t('name')
                %td= @organization.name
              %tr
                %td= t('contracting_party')
                %td= @organization.contracting_party

    #assets.tab-pane
      .assets
        = render @organization.assets
      - if user_signed_in? && current_user.can_update?(@organization)
        = @organization.new_asset






