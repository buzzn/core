.modal-dialog
  .modal-content
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
      %h4.modal-title= t'asset'
    .modal-body
      - if current_user.can_update?(@device)
        = simple_form_for @asset, remote: false, html: {multipart: true} do |f|
          = render 'assets/form_fields', f: f
          = f.button :submit, id: 'submit', class: 'btn btn-success'
          = link_to_delete
      - else
        = @asset.decorate.image_tag_large if @asset.image?
        %p= @asset.description