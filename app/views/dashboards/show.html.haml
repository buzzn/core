#page-content
  .dashboard-chart{id: @dashboard.id, 'data-metering_point-ids': @dashboard.dashboard_metering_points.collect{|m| m.id}}
    .row
      .col-sm-12.col-md-12.col-lg-12
        .panel
          .panel-body.panel-colorful.dashboard-background
            .chart{id: "chart-container-#{@dashboard.id}", style: "width: 100%; height: 300px;"}
            .pad-all
              .btn.btn-success.btn-chart-prev=t('prev')
              .btn.btn-success.btn-chart-zoomout=t('zoom_out')
              .btn.btn-success.btn-chart-next.pull-right=t('next')
  .metering_points
    = render partial: "metering_points/metering_point_small", collection: @metering_points.decorate, as: :metering_point


