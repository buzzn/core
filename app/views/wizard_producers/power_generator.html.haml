.container
  .row
    .col-md-3
    .col-md-6
      %h5= t'progress'
  .row
    .col-md-3
    .col-md-6
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", role: "progressbar", style: "width: 40%;"}
            40%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "57", role: "progressbar", style: "width: 57%;"}
            57%
  .row
    .col-md-3
    .col-md-6
      .forminput.box
        %h1= t'power_generator'

        = simple_form_for @device, url: url_for( action: 'power_generator_update', controller: 'wizard_producers'), method: 'put', html: {class: 'form-horizontal' }, wrapper: :horizontal_form  do |f|
          = f.input :law, collection: Device.laws
          = f.input :manufacturer_name
          = f.input :manufacturer_product_name
          = f.input :primary_energy, collection: Device.primary_energies
          = f.input :watt_peak
          = f.input :watt_hour_pa
          = f.input :commissioning
          = f.submit t("continue"), class: 'btn btn-success pull-right', id: 'submit'