.container
  .row
    .col-md-4
    .col-md-4
      %h5= t'progress'
  .row
    .col-md-4
    .col-md-4
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", role: "progressbar", style: "width: 60%;"}
            60%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "70", role: "progressbar", style: "width: 70%;"}
            70%
  .row
    .col-md-4
    .col-md-4
      .forminput.box
        %h1= t'power_generator'

        = simple_form_for @device, url: url_for( action: 'power_generator_update', controller: 'wizard_producers'), method: 'put'  do |f|
          = f.input :law, collection: Device.laws
          = f.input :manufacturer_name
          = f.input :manufacturer_product_name
          = f.input :primary_energy, collection: Device.primary_energies
          = f.input :watt_peak
          = f.input :watt_hour_pa
          = f.input :commissioning
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'