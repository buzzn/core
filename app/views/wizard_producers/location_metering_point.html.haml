.container
  .row
    .col-md-4
    .col-md-4
      %h5= t'progress'
  .row
    .col-md-4
    .col-md-4
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "58", role: "progressbar", style: "width: 58%;"}
            58%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "68", role: "progressbar", style: "width: 68%;"}
            68%
  .row
    .col-md-4
    .col-md-4
      .forminput.box
        %h1= t'location_metering_point'

        = simple_form_for @metering_point, url: url_for( action: 'location_metering_point_update', controller: 'wizard_consumers'), method: 'put'  do |f|
          = f.input :address_addition
          = f.input :uid
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'