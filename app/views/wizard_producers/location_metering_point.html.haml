.container
  .row
    .col-md-4
    .col-md-4
      %h5= t'progress'
  .row
    .col-md-4
    .col-md-4
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "31", role: "progressbar", style: "width: 31%;"}
            31%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", role: "progressbar", style: "width: 40%;"}
            40%
  .row
    .col-md-4
    .col-md-4
      .forminput.box
        %h1= t'location_metering_point'

        = simple_form_for @metering_point, url: url_for( action: 'location_metering_point_update', controller: 'wizard_producers'), method: 'put'  do |f|
          = f.input :address_addition
          = f.input :uid
          = f.input :meter_type, include_blank: false, collection: MeteringPoint.types, input_html: { class: 'select2' }
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'