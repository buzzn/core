.container
  .row
    .col-md-4
    .col-md-4
      %h5= t'progress'
  .row
    .col-md-4
    .col-md-4
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "61", role: "progressbar", style: "width: 61%;"}
            61%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "64", role: "progressbar", style: "width: 64%;"}
            64%
  .row
    .col-md-4
    .col-md-4
      .forminput.box
        %h1= t'metering_point_current_supplier'

        = simple_form_for @electricity_supplier_contract, url: url_for( action: 'metering_point_current_supplier_update', controller: 'wizard_producers'), method: 'put', html: {class: 'form-horizontal' }, wrapper: :horizontal_form  do |f|
          = f.association :organization, collection: Organization.electricity_suppliers
          = f.input :customer_number
          = f.input :contract_number
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'