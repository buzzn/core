.container
  .row
    .col-md-3
    .col-md-6
      %h5= t'progress'
  .row
    .col-md-3
    .col-md-6
      .progress
        .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "21", role: "progressbar", style: "width: 21%;"}
          21%
  .row
    .col-md-3
    .col-md-6
      .forminput.box
        %h1= t'contracting_party_organizations_address'

        = simple_form_for @address, url: url_for( action: 'contracting_party_organization_address_update', controller: 'wizard_producers'), method: 'put' do |f|
          = render 'addresses/form_fields', f: f
          = f.submit t("continue"), class: 'btn btn-success pull-right', id: 'submit'


