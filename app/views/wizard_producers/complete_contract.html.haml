.container
  .row
    .col-md-3
    .col-md-6
      %h5= t'progress'
  .row
    .col-md-3
    .col-md-6
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "94", role: "progressbar", style: "width: 94%;"}
            94%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "93", role: "progressbar", style: "width: 93%;"}
            93%
  .row
    .col-md-3
    .col-md-6
      .forminput.box
        %h1= t'complete_contract'
        = simple_form_for @contract, url: url_for(action: 'complete_contract_update', controller: 'wizard_producers'), method: 'put', html: {class: 'form-horizontal' }, wrapper: :horizontal_form  do |f|
          = f.input :terms
          = f.input :confirm_pricing_model
          = f.input :power_of_attorney
          = f.submit t("continue"), class: 'btn btn-success pull-right', id: 'submit'