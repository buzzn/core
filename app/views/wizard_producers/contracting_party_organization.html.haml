.container
  .row
    .col-md-3
    .col-md-6
      %h5= t'progress'
  .row
    .col-md-3
    .col-md-6
      .progress
        .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "14", role: "progressbar", style: "width: 14%;"}
          14%
  .row
    .col-md-3
    .col-md-6
      .forminput.box
        %h1= t'contracting_party_organization'

        = simple_form_for @organization, url: url_for( action: 'contracting_party_organization_update', controller: 'wizard_producers'), method: 'put', html: {class: 'form-horizontal' }, wrapper: :horizontal_form  do |f|
          = render 'organizations/form_fields', f: f
          = f.submit t("continue"), class: 'btn btn-success pull-right', id: 'submit'