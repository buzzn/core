.container
  .row
    .col-md-3
    .col-md-6
      %h5= t'progress'
  .row
    .col-md-3
    .col-md-6
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "85", role: "progressbar", style: "width: 85%;"}
            85%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "84", role: "progressbar", style: "width: 84%;"}
            84%
  .row
    .col-md-3
    .col-md-6
      .forminput.box
        %h1= t'contracting_party_taxation'
        = simple_form_for @contracting_party, url: url_for( action: 'contracting_party_taxation_update', controller: 'wizard_producers'), method: 'put' do |f|
          = f.input :sales_tax_number
          = f.input :tax_rate
          = f.input :tax_number
          = f.submit t("continue"), class: 'btn btn-success pull-right', id: 'submit'