.container
  .row
    .col-md-3
    .col-md-6
      %h5= t'progress'
  .row
    .col-md-3
    .col-md-6
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "70", role: "progressbar", style: "width: 70%;"}
            70%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "76", role: "progressbar", style: "width: 76%;"}
            76%
  .row
    .col-md-3
    .col-md-6
      .forminput.box
        %h1= t'contracting_party_bank_account'
        = simple_form_for @bank_account, url: url_for( action: 'contracting_party_bank_account_update', controller: 'wizard_producers'), method: 'put', html: {class: 'form-horizontal' }, wrapper: :horizontal_form  do |f|
          = render 'bank_accounts/form_fields', f: f
          = f.submit t("continue"), class: 'btn btn-success pull-right', id: 'submit'