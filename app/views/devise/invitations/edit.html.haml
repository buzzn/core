%h2= t 'devise.invitations.edit.header'
= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
  /= devise_error_messages!
  = f.hidden_field :invitation_token

  = f.simple_fields_for :profile, resource.build_profile do |p|
    = p.input :first_name
    = p.input :last_name
  = f.input :password,              required: true
  = f.input :password_confirmation, required: true

  = f.input :legal_notes, as: :boolean, label: t('legal_notes', terms_of_use: link_to(t('terms_of_use'), page_path('terms_of_use')), data_protection_guidelines: link_to(t('data_protection_guidelines'), page_path('data_protection_guidelines'))).html_safe, required: true

  /= f.input :legal_notes, as: :boolean, label: 'blablabla', required: true


  = f.button :submit, t("devise.invitations.edit.submit_button")

