- meta title: t('sign_up')

.container
  .row
    .col-md-3
    .col-md-6
      %h1= t('sign_up')
      = simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal' }, wrapper: :horizontal_form do |f|

        = f.simple_fields_for :profile, resource.build_profile do |p|
          = p.input :first_name
          = p.input :last_name

        = f.input :email,                 required: true
        = f.input :password,              required: true
        = f.input :password_confirmation, required: true


        = f.button :submit, t('sign_up'), class: 'btn btn-lg btn-success btn-block', id: 'submit'