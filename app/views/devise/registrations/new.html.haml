- meta title: t('sign_up')

%h1= t('sign_up')
= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
  = f.error_notification
  = f.input :first_name,            required: true
  = f.input :last_name,             required: true
  = f.input :email,                 required: true
  = f.input :password,              required: true
  = f.input :password_confirmation, required: true
  = f.input :terms#, hint: "#{link_to t('terms_and_conditions'), terms_and_conditions_path } #{t('simple_form.hints.user.terms_for_link')}".html_safe
  .form-actions
    = f.button :submit, t('sign_up'), class: 'btn btn-success', id: 'submit'