- meta title: t('sign_in')

.raw
  .col-md-4.col-md-offset-4
    %h1= t('sign_in')
    = simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f|
      = f.input :email, required: false, autofocus: true#, label: false, placeholder: t('email')
      = f.input :password, required: false#, label: false, placeholder: t('password')
      = f.input :remember_me, as: :boolean, input_html: {checked: true}
      = f.button :submit, t('sign_in'), class: 'btn btn-lg btn-success btn-block'
      = render "devise/shared/links"


