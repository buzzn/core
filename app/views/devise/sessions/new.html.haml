- meta title: t('sign_in')

#content
  .forminput.box
    %h1= t('sign_in')
    = simple_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f|
      %fieldset
        = devise_error_messages!
        = f.input :email, :required => false, :autofocus => true
        = f.input :password, :required => false
        = f.input :remember_me, :as => :boolean, input_html: { checked: true }, :as => :hidden if devise_mapping.rememberable?
        .form-actions
          = f.button :submit, t('sign_in'), id: 'submit', class: 'btn btn-success'
          = link_to t('sign_up'), new_registration_path(resource_name), class: 'btn'
        = link_to t('forgot_password'), new_password_path(resource_name)