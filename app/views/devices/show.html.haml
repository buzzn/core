- meta title: @device.name

= content_for :aside do
  %aside#aside-container
    #aside
      .nano
        .nano-content{:tabindex => "0"}

          .text-center.pad-all
            .pad-ver
              %span.fa-stack.fa-lg.fa-5x
                %i.fa.fa-circle.fa-stack-2x
                %i.fa.fa-plug.fa-stack-1x.fa-inverse
            %h4.text-lg.text-overflow.mar-no= @device.name

          %hr
            %ul.list-group.bg-trans

              - @manager.each do |user|
                %li.list-group-item.list-item-sm
                  %i.fa.fa-user.fa-fw
                  = link_to user.profile.name, user.profile

              %li.list-group-item.list-item-sm
                %i.fa.fa-clock-o.fa-fw
                = timeago_tag @device.commissioning


          %hr
            .text-center.clearfix
              %p.h3= @device.watt_peak
              %small.text-muted= t'watt_peak'

          %hr
            .text-center.clearfix
              - if current_user.can_update?(@device)
                = @device.link_to_edit


        .nano-pane{:style => "display: none;"}
          .nano-slider{:style => "height: 20px; transform: translate(0px, 0px);"}

.properties-container
  = image_tag @device.image.cover, class: 'img-responsive cover'

#page-content
  .row
    .col-sm-6
      .panel
        .panel-heading
          %h3.panel-title
            =t('device_properties')
        .panel-body
          .table-responsive
            %table.table.table-striped
              %tbody
                %tr
                  %td= t('mode')
                  %td= @device.mode
                - if @device.output?
                  %tr
                    %td= t('category')
                    %td= @device.category
                %tr
                  %td= t('manufacturer')
                  %td= @device.manufacturer_name
                %tr
                  %td= t('manufacturer_product_name')
                  %td= @device.manufacturer_product_name
                %tr
                  %td= t('shop_link')
                  %td= @device.shop_link
                - if @device.output?
                  %tr
                    %td= t('primary_energy')
                    %td= @device.primary_energy
                %tr
                  %td= t('watt_peak')
                  %td= @device.watt_peak
                %tr
                  %td= t('watt_hour_pa')
                  %td= @device.watt_hour_pa
                %tr
                  %td= t('commissioning')
                  %td= timeago_tag @device.commissioning
                %tr
                  %td= t('mobile')
                  %td= t @device.mobile


  / %h1.page-header.text-overflow= t'belongs_to_user'
  / .row
  /   - @manager.each do |user|
  /     = render user.profile.decorate

  / - if @metering_point && current_user.can_update?(@device)
  /   %h1.page-header.text-overflow= t'belongs_to_metering_point'
  /   .row
  /     = render @metering_point

  / - if @location && current_user.can_update?(@device)
  /   %h1.page-header.text-overflow= t'belongs_to_location'
  /   .row
  /     = render @location

  / - if @group
  /   %h1.page-header.text-overflow= t'belongs_to_group'
  /   .row
  /     = render @group






