.modal-content
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
    %h4.modal-title= t'edit_device'
  .modal-body
    = simple_form_for @device, remote: true, html: { multipart: true } do |f|
      = render 'devices/form_fields', f: f
      .modal-footer
        = f.button :button, id: 'submit', class: 'btn btn-success', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>" + '  ' + t('loading') + '...'}
        - if @device.metering_point && @device.metering_point.group && @device.mode == "out"
          %button.btn.btn-danger{:disabled => "disabled"}= t('not_deletable')
        - else
          = @device.decorate.link_to_delete
