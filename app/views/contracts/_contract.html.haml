.col-xs-12.col-sm-12.col-md-12.col-lg-12.contract{id: "contract_#{contract.id}"}
  = link_to contract do
    - if contract.mode == 'electricity_supplier_contract'
      .panel
        .pad-all.media.panel-mint.panel-colorful
          .media-left
            %span.icon-wrap.icon-wrap-xs
              %i.fa.fa-file-text-o.fa-2x
          .media-body
            %p.h3.text-thin.media-heading= t('electricity_supplier')
            %small.text-uppercase= t(contract.mode)
        %ul.list-unstyled.text-center.pad-top.mar-no.clearfix
          - if contract.organization
            %li.col-xs-4
              %span.text-lg= contract.organization.name
              %p.text-muted.text-uppercase
                %small= t('organization')
          %li.col-xs-4
            %span.text-lg= contract.tariff
            %p.text-muted.text-uppercase
              %small= t('tariff')
          %li.col-xs-4
            %span.text-lg= "#{human_readable_watt(contract.forecast_watt_hour_pa)}h"
            %p.text-muted.text-uppercase
              %small= t('forecast_watt_hour_pa')
          %li.col-xs-4
            %span.text-lg= humanized_money_with_symbol contract.price
            %p.text-muted.text-uppercase
              %small= t('price')


    - elsif contract.mode == 'metering_point_operator_contract'
      .panel
        .pad-all.media.panel-mint.panel-colorful
          .media-left
            %span.icon-wrap.icon-wrap-xs
              %i.fa.fa-file-text-o.fa-2x
          .media-body
            %p.h3.text-thin.media-heading= t('metering_point_operator')
            %small.text-uppercase= t(contract.mode)
        %ul.list-unstyled.text-center.pad-top.mar-no.clearfix
          - if contract.organization
            %li.col-xs-4
              %span.text-lg= contract.organization.name
              %p.text-muted.text-uppercase
                %small= t('organization')
          %li.col-xs-4
            %span.text-lg= contract.tariff
            %p.text-muted
              %small= t('tariff')
          %li.col-xs-4
            %span.text-lg= humanized_money_with_symbol contract.price
            %p.text-muted
              %small= t('price')



    - elsif contract.mode == 'servicing_contract'
      .panel
        .pad-all.media.panel-mint.panel-colorful
          .media-left
            %span.icon-wrap.icon-wrap-xs
              %i.fa.fa-file-text-o.fa-2x
          .media-body
            %p.h3.text-thin.media-heading= t('localpool_servicing')
            %small.text-uppercase= t(contract.mode)
        %ul.list-unstyled.text-center.pad-top.mar-no.clearfix
          - if contract.organization
            %li.col-xs-4
              %span.text-lg= contract.organization.name
              %p.text-muted.text-uppercase
                %small= t('organization')
          %li.col-xs-4
            %span.text-lg= contract.tariff
            %p.text-muted
              %small= t('tariff')
          %li.col-xs-4
            %span.text-lg= humanized_money_with_symbol contract.price
            %p.text-muted
              %small= t('price')




