.block{id: "contract_#{contract.id}"}
  %h2= t contract.mode
  .content.no-padding
    %table.table
      %tbody

        %tr
          %td= t('tariff')
          %td= contract.tariff
        %tr
          %td= t('status')
          %td= contract.status
        %tr
          %td= t('forecast_watt_hour_pa')
          %td= "#{human_readable_watt(contract.forecast_watt_hour_pa)}h"
        %tr
          %td= t('price')
          %td= humanized_money_with_symbol contract.price











