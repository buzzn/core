#page-title
  %h1.page-header.text-overflow= "#{@profiles.count} #{t'users'}"
  .searchbox
    = form_tag profiles_path, method: 'get' do
      .input-group.custom-search-form
        = text_field_tag :search, params[:search], placeholder: t('search'), class: 'form-control'
        %span.input-group-btn
          .text-muted= button_tag '', name: nil, class: 'btn btn-default fa fa-search'


#page-content
  .row
    - if @profiles.empty?
      = t('no_users_found_matching', search: params[:search])
    - else
      = render @profiles