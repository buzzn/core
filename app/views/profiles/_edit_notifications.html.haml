.modal-content
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
    %h4.modal-title= t'edit_notifications'

  .modal-body
    %p= t('these_settings_are_valid_globally_and_override_the_settings_for_each_of_your_groups_and_registers')
    = simple_form_for @profile, remote: true, url: edit_notifications_update_profile_path, method: 'put' do |f|
      = f.input :notify_me_when_comment_create, as: :boolean, wrapper: :vertical_boolean, input_html: { checked: current_user.notification_unsubscribers.by_resource(nil).by_key('comment.create').any? ? false : true }
      = f.input :notify_me_when_comment_liked, as: :boolean, wrapper: :vertical_boolean, input_html: {checked: current_user.notification_unsubscribers.by_resource(nil).by_key('comment.liked').any? ? false : true }
      = f.input :notify_me_when_register_exceeds, as: :boolean, wrapper: :vertical_boolean, input_html: { checked: current_user.notification_unsubscribers.by_resource(nil).by_key('register.exceeds').any? ? false : true }
      = f.input :notify_me_when_register_undershoots, as: :boolean, wrapper: :vertical_boolean, input_html: { checked: current_user.notification_unsubscribers.by_resource(nil).by_key('register.undershoots').any? ? false : true }
      = f.input :notify_me_when_register_offline, as: :boolean, wrapper: :vertical_boolean, input_html: { checked: current_user.notification_unsubscribers.by_resource(nil).by_key('register.offline').any? ? false : true }
      .modal-footer
        .btn.btn-primary.btn-labeled.fa.fa-remove{"data-dismiss" => "modal"}
          = t'cancel'
        = f.button :button, t('save'), id: 'submit', class: 'btn btn-success btn-labeled fa fa-check'