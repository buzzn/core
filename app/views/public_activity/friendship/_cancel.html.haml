- single_content_for :action do
  - if a.recipient
    = t('and') + ' '
    %a.btn-link.text-semibold{:href => profile_path(a.recipient.profile)}
      = a.recipient.name
    = ' ' + t('are_no_friends_anymore')
  - else
    = t('and') + ' ' + t('a_unknown_user')
    = ' ' + t('are_no_friends_anymore')