    %h4.modal-title= t'invite_somebody_to_join_this_register'
  .modal-body
    = simple_form_for @register, remote: true,  url: send_invitations_update_register_path, method: 'put'  do |f|
      .js-dependent-fields{data: {checkbox: {id: "#{@register.class_name}_invite_via_email", value: "false"}}}
        = f.input :new_users, collection: current_user.invitable_users(@register), input_html: { class: 'select2', 'data-placeholder': t('search_friends')}, label: false, selected: '', include_blank: true
      = f.input :invite_via_email, as: :boolean, wrapper: :vertical_boolean, input_html: { checked: (params[@register.class_name.to_sym].nil? || params[@register.class_name.to_sym][:invite_via_email].nil?) ? false : true }
      .js-dependent-fields{data: {checkbox: {id: "#{@register.class_name}_invite_via_email", value: "true"}}}
        = f.input :email, input_html: { value: ''}
        = f.input :message, input_html: { value: ''}
      .modal-footer
        .btn.btn-primary.btn-labeled.fa.fa-remove{"data-dismiss" => "modal"}
          = t'cancel'
        = f.button :button, t('confirm'), id: 'submit', class: 'btn btn-success btn-labeled fa fa-check'