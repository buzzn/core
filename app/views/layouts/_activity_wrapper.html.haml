.activity
  .body
    .mega-icon
    - @a = a.decorate # TODO remove decorater from view
    = @a.key_icon
    = a.key
    .title
      - if a.owner
        = link_to a.owner.name, a.owner.profile
      - else
      = content_for :action
    .details
      .avatar
        - if a.owner
          = image_tag a.owner.profile.image, width: "30", height: "30"
        - else
          = image_tag "http://i0.wp.com/a248.e.akamai.net/assets.github.com/images/gravatars/gravatar-140.png", width: "30", height: "30"
      = yield