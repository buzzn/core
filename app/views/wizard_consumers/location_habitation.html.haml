.container
  .row
    .col-md-4
    .col-md-4
      %h5= t'progress'
  .row
    .col-md-4
    .col-md-4
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "42", role: "progressbar", style: "width: 42%;"}
            42%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "56", role: "progressbar", style: "width: 56%;"}
            56%
  .row
    .col-md-4
    .col-md-4
      .forminput.box
        %h1= t'location_habitation'

        = simple_form_for @location, url: url_for( action: 'location_habitation_update', controller: 'wizard_consumers'), method: 'put', html: {class: 'form-horizontal' }, wrapper: :horizontal_form  do |f|
          = f.input :new_habitation
          = f.input :inhabited_since
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'