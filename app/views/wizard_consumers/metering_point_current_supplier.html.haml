.container
  .row
    .col-md-4
    .col-md-4
      %h5= t'progress'
  .row
    .col-md-4
    .col-md-4
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "65", role: "progressbar", style: "width: 65%;"}
            65%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "74", role: "progressbar", style: "width: 74%;"}
            74%
  .row
    .col-md-4
    .col-md-4
      .forminput.box
        %h1= t'metering_point_current_supplier'

        = simple_form_for @electricity_supplier_contract, url: url_for( action: 'metering_point_current_supplier_update', controller: 'wizard_consumers'), method: 'put'  do |f|
          = f.association :organization, collection: Organization.electricity_suppliers
          = f.input :customer_number
          = f.input :contract_number
          = f.input :forecast_watt_hour_pa
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'