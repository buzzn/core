.container
  .row
    .col-md-3
    .col-md-6
      %h5= t'progress'
  .row
    .col-md-3
    .col-md-6
      .progress
        -if current_user.contracting_party.legal_entity == 'natural_person'
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", role: "progressbar", style: "width: 60%;"}
            60%
        -else
          .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "70", role: "progressbar", style: "width: 70%;"}
            70%
  .row
    .col-md-3
    .col-md-6
      .forminput.box
        %h1= t'metering_point_current_supplier'

        = simple_form_for @electricity_supplier_contract, url: url_for( action: 'metering_point_current_supplier_update', controller: 'wizard_consumers'), method: 'put', html: {class: 'form-horizontal' }, wrapper: :horizontal_form  do |f|
          = f.association :organization, collection: Organization.electricity_suppliers
          = f.input :customer_number
          = f.input :contract_number
          = f.input :forecast_watt_hour_pa
          = f.submit t("continue"), class: 'btn btn-success pull-right', id: 'submit'