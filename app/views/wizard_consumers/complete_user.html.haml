.container
  .row
    .col-md-4
    .col-md-4
      %h5= t'progress'
  .row
    .col-md-4
    .col-md-4
      .progress
        .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "0", role: "progressbar", style: "width: 0%;"}
          0%
  .row
    .col-md-4
    .col-md-4
      .forminput.box
        %h1= t'complete_user'
        = simple_form_for @profile, url: url_for(action: 'complete_user_update', controller: 'wizard_consumers'), method: 'put' do |f|
          = f.input :first_name
          = f.input :last_name
          = f.input :gender, include_blank: false, collection: Profile.genders, input_html: { class: 'select2' }
          = f.input :phone
          = f.submit t("continue"), class: 'btn btn-success', id: 'submit'

