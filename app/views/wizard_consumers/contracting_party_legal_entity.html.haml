.container
  .row
    .col-md-3
    .col-md-6
      %h5= t'progress'
  .row
    .col-md-3
    .col-md-6
      .progress
        .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "15", role: "progressbar", style: "width: 15%;"}
          15%
  .row
    .col-md-3
    .col-md-6
      .forminput.box
        %h1= t'contracting_party_legal_entity'
      = simple_form_for @contracting_party, url: url_for( action: 'contracting_party_legal_entity_update', controller: 'wizard_consumers'), method: 'put'  do |f|
        = f.input :legal_entity, include_blank: false, collection: ContractingParty.legal_entities, input_html: { class: 'select2' }
        = f.submit t("continue"), class: 'btn btn-success pull-right', id: 'submit'
