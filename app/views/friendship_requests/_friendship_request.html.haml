.bs-callout.bs-callout-info
  .col-md-3
    .thumb_icon.friendship_req
      = link_to image_tag(friendship_request.sender.profile.decorate.image.sm), friendship_request.sender.profile, :data => { 'toggle' => 'tooltip', container: 'body', 'original-title' => friendship_request.sender.profile.name }, rel: 'tooltip'
  .col-md-1
  .col-md-8
    %h4= t'new_friendship_request'
    %p= friendship_request.sender.profile.name

    = link_to t('accept'), accept_friendship_request_path(friendship_request), class: 'btn btn-success'
    = link_to t('reject'), reject_friendship_request_path(friendship_request), class: 'btn btn-danger'
